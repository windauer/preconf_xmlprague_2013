                            <tgroup align="left" char="" charoff="50" cols="2" colsep="0" rowsep="0">
                                <colspec colname="col1" colnum="1" colwidth="25*"/>
                                <colspec colname="col2" colnum="2" colwidth="25*"/>
                                <tbody valign="top">
                                    <row>
                                        <entry VJ="1" align="left" colsep="0" valign="top">im Jahr 1985:</entry>
                                        <entry VJ="1" align="left" colsep="0" valign="top">50,0 vom Hundert,</entry>
                                    </row>
                                    <row>
                                        <entry VJ="1" align="left" colsep="0" valign="top">im Jahr 1986:</entry>
                                        <entry VJ="1" align="left" colsep="0" valign="top">47,5 vom Hundert,</entry>
                                    </row>
                                    <row>
                                        <entry VJ="1" align="left" colsep="0" valign="top">im Jahr 1987:</entry>
                                        <entry VJ="1" align="left" colsep="0" valign="top">45,0 vom Hundert,</entry>
                                    </row>
                                    <row>
                                        <entry VJ="1" align="left" colsep="0" valign="top">im Jahr 1988:</entry>
                                        <entry VJ="1" align="left" colsep="0" valign="top">42,5 vom Hundert,</entry>
                                    </row>
                                    <row>
                                        <entry VJ="1" align="left" colsep="0" valign="top">im Jahr 1989:</entry>
                                        <entry VJ="1" align="left" colsep="0" valign="top">40,0 vom Hundert,</entry>
                                    </row>
                                    <row>
                                        <entry VJ="1" align="left" colsep="0" valign="top">im Jahr 1990:</entry>
                                        <entry VJ="1" align="left" colsep="0" valign="top">37,5 vom Hundert,</entry>
                                    </row>
                                    <row>
                                        <entry VJ="1" align="left" colsep="0" valign="top">im Jahr 1991:</entry>
                                        <entry VJ="1" align="left" colsep="0" valign="top">35,0 vom Hundert,</entry>
                                    </row>
                                    <row>
                                        <entry VJ="1" align="left" colsep="0" valign="top">im Jahr 1992:</entry>
                                        <entry VJ="1" align="left" colsep="0" valign="top">32,5 vom Hundert,</entry>
                                    </row>
                                    <row>
                                        <entry VJ="1" align="left" colsep="0" valign="top">im Jahr 1993:</entry>
                                        <entry VJ="1" align="left" colsep="0" valign="top">30,0 vom Hundert,</entry>
                                    </row>
                                    <row>
                                        <entry VJ="1" align="left" colsep="0" valign="top">im Jahr 1994:</entry>
                                        <entry VJ="1" align="left" colsep="0" valign="top">27,5 vom Hundert,</entry>
                                    </row>
                                    <row>
                                        <entry VJ="1" align="left" colsep="0" valign="top">ab dem Jahr 1995:</entry>
                                        <entry VJ="1" align="left" colsep="0" valign="top">25,0 vom Hundert.</entry>
                                    </row>
                                </tbody>
                            </tgroup>
                        </table>
                    </P>
                </Content>
            </text>
            <fussnoten/>
